{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "noEmit": true,
        "types": ["node", "vitest"],
        "rootDir": ".",
        "experimentalDecorators": true,
        "allowImportingTsExtensions": true,
        "plugins": [
            {
                "name": "typescript-strict-plugin",
                "paths": ["./src", "./test"]
            }
        ]
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules"]
}
