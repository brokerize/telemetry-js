{
  "name": "@brokerize/telemetry",
  "version": "1.0.0",
  "description": "A telemetry package for metrics and tracing powered by brokerize",
  "keywords": [
    "telemetry",
    "metrics",
    "tracing",
    "observability"
  ],
  "main": "dist/index.js",
  "files": [
    "dist", "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "types": "dist/index.d.ts",
  "license": "",
  "author": "brokerize",
  "type": "module",
  "scripts": {
    "build": "tsc"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ],
    "**/*.{html,css,scss,stylus,js,ts,json,yml,md}": [
      "prettier --write"
    ],
    "README.md": [
      "markdown-toc-gen update"
    ],
    "package.json": "sort-package-json"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "none",
    "useTabs": false
  },
  "dependencies": {
    "@opentelemetry/api" : "1.9.0",
    "@opentelemetry/auto-instrumentations-node": "0.60.0",
    "@opentelemetry/exporter-trace-otlp-http": "0.202.0",
    "@opentelemetry/sdk-node": "0.202.0",
    "@opentelemetry/sdk-trace-base": "2.0.1",
    "prom-client": "15.1.3"
  },
  "devDependencies": {
    "@eslint/js": "9.22.0",
    "@swc/core": "1.11.8",
    "eslint": "9.22.0",
    "@types/express": "^4.17.21",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "ts-node": "10.9.2",
    "tsx": "4.19.3",
    "typescript": "5.8.2",
    "typescript-eslint": "8.34.0",
    "typescript-strict-plugin": "2.4.4"
  },
  "peerDependencies": {
    "express": ">=4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brokerize/telemetry-js.git"
  },
  "bugs": {
    "url": "https://github.com/brokerize/telemetry-js/issues"
  },
  "homepage": "https://github.com/brokerize/telemetry-js#readme"
}
